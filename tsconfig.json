{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2020",
    "strict": true,
    // 需要指定 root 吧
    "root":"./src",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    // 尽量不要用 baseUrl，用 root 替代会更好
    "baseUrl": ".",
    "outDir": "./lib",
      // 这个不需要，安装完会自动 resolve 的
    "types": [
      "node"
    ],
    "declaration": true,// 是否生成声明文件
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
